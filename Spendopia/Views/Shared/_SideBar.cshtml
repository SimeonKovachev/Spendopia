	<ejs-sidebar id="sidebar" width="250px" enableDock dockSize="100px"
			 target=".dock-target" enableGestures="false">
		<e-content-template>
			<div class="logo-wrapper">
				<div class="app-logo">
					<img style="width:50px;" src="~/logo.png" />
				</div>
				<div class="w-100"></div>
				<i id="sidebar-toggler" class="fa-solid fa-angles-left"></i>
			</div>

			<div class="profile-wrapper">
				<img class="profile-pic" src="~/profile.jpg" />
				<div class="titles d-flex flex-column ps-3">
					<h6 class="mb-0">Spendopia</h6>
					<span class="text-muted">Simeon Kovachev</span>
				</div>
			</div>

